#!/bin/sh
# vim:ts=4:sw=4:expandtab
echo '{ "version": 1 }['
echo '[]'

COL_DEFAULT=#839496
COL_ACTIVE=#859900 #fdf6e3
COL_INACTIVE=#586e75
COL_RED=#cb4b16
COLORI3="$COL_DEFAULT"

function Probel(){
echo -ne '{"full_text":" "},'
}

function getMoc() {
COLORI3="$COL_INACTIVE"
local mocstat=''
local mocsong='off'
if [ -n "$(pgrep mocp)" ]; then
    local mocstat=$(mocp --info | grep 'State')
    local mocsong=$(mocp -Q'%title')
    if [ "$mocsong" = '' ]; then
        mocsong='No title'
    fi
    COLORI3="$COL_ACTIVE"
fi
echo -ne '{"full_text":"‚èØ '$mocstat' - '$mocsong'","color":"'$COLORI3'"},'
}

function getLang() {
COLORI3="$COL_DEFAULT"
local lng=
[ "`xset -q | awk -F \" \" '/Group 2/ {print($4)}'`" = "on" ] && lng="ru" || lng="en"
[ "$lng" = "ru" ] && COLORI3="$COL_RED"
echo -ne '{"full_text":"'$lng'","color":"'$COLORI3'"},'
}

function getVol() {
COLORI3="$COL_DEFAULT"
local vol="$(amixer -c 0 get Master | grep -E -o '[0-9]{1,3}?%' | head -1)"
[ "$vol" = "100%" ] && COLORI3="$COL_ACTIVE"
echo -ne '{"full_text":"üîä '$vol'","color":"'$COLORI3'"},'
}

function getDay() {
COLORI3="$COL_DEFAULT"
local day="$(date +'%a, %d %b')"
[ "$(date +'%u')" -gt "5" ] && COLORI3="$COL_RED"
echo -ne '{"full_text":"üóì '$day'","color":"'$COLORI3'"},'
}

function getTme() {
COLORI3="$COL_DEFAULT"
local tme="$(date +'%R')"
[[ "$(date +'%H')" -gt "6" && "$(date +'%H')" -lt "21" ]] || COLORI3="$COL_ACTIVE"
echo -ne '{"full_text":"‚è∞ '$tme'","color":"'$COLORI3'"}'
}


while :;
do
    echo -e ',['$(Probel)$(getMoc)$(getLang)$(getVol)$(getDay)$(getTme)']'
    sleep 5
done
