# ************************************************************************
#			 MAIN CONFIGURATION
# ************************************************************************
set $mod Mod4
font pango:Play, FontAwesome 12

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
new_window pixel 3
new_float nonefocus_follows_mouse yes
force_focus_wrapping yes
popup_during_fullscreen ignore
force_display_urgency_hint 0ms
focus_on_window_activation urgent
floating_minimum_size -1 x -1
#floating_maximum_size 1440 x 900
workspace_auto_back_and_forth yes
focus_follows_mouse no

for_window [class="^.*"] border pixel 1
gaps inner 5
gaps outer 5

# ************************************************************************
#			  SET ENVIRONMENT
# ************************************************************************

# names of workspaces
set $WS1  "1:"
set $WS2  "2:"
set $WS3  "3:"
set $WS4  "4:"
set $WS5  "5:"
set $WS6  "6:"
set $WS7  "7:"
set $WS8  "8:"
set $WS9  "9:"
set $WS10 "0:"

# colors of Groovebox-dark theme
set $backc #282828
set $textc #e9dab2
set $indic #fe8019
set $inacc #504945

set $black #1d2021

client.focused          $textc $inacc $textc $indic
client.unfocused        $inacc $black $inacc $indic
client.focused_inactive $backc $inacc $inacc $indic
client.urgent           $inacc $indic $textc $indic

# ************************************************************************
#			 BAR CONFIGURATION
# ************************************************************************
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    position top
        strip_workspace_numbers yes
        separator_symbol "⟨"
        status_command ~/.local/bin/i3_bar
#        status_command i3blocks
        tray_output primary
        tray_padding 1
        colors {
            statusline $textc
                background $backc
                separator  $inacc
#                                   BORDER  BACKGR  FOREGR
                focused_workspace  $backc  $backc  $textc
                inactive_workspace $backc  $backc  $inacc
                active_workspace   $bordc  $backc  $indic
                urgent_workspace   $backc  $backc  $indic
                binding_mode       $bordc  $indic  $backc
        }
}

# ************************************************************************
#			 WIN CONFIGURATION
# ************************************************************************
